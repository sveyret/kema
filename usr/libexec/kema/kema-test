KEMA_SYNTAX=
KEMA_DESCRIPTION=$(eval_gettext "Test new kernel configuration")

# Calculate current and test kernel
CUR_KERNEL=$(uname -r | perl -pe 's/-.*//')
TEST_KERNEL=${CUR_KERNEL}-Test

# Information
einfo $(eval_gettext "Creating new test kernel: \${TEST_KERNEL}\\n  (based on kernel: \${CUR_KERNEL})")
pause

# Generate new kernel
cd /usr/src/linux
if [[ -r .config ]]; then
  mv .config .config.save 2>/dev/null
fi
if isTestPending; then
  ewarn $(eval_gettext "Test pending - no cleaning done")
  cp ${KEMA_SAVED_CONFIG} .config 2>/dev/null
else
  make mrproper
  cp .config.save .config 2>/dev/null
fi
make menuconfig
make ${MAKE_OPTS} && make ${MAKE_OPTS} modules_install
cd ..

# Update boot
cp linux/arch/x86_64/boot/bzImage /boot/kernel-${TEST_KERNEL}
if ! isTestPending; then
  bootloader_backup
  bootloader_install "Gentoo test ${CUR_KERNEL}" "kernel-${TEST_KERNEL}" "${TEST_KERNEL}"
fi

# Save configuration files
mv linux/.config ${KEMA_SAVED_CONFIG}
mv linux/.config.save linux/.config 2>/dev/null

